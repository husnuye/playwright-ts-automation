{
  "name": "playwright-ts-automation",
  "version": "1.0.0",
  "description": "A modern Playwright + TypeScript E2E automation framework with Allure reporting and GitHub Actions CI integration.",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "report": "npx playwright show-report",
    "allure:generate": "npx allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "npx allure open ./allure-report",
    "allure:full": "npm run test && npm run allure:generate && npm run allure:open"
  },
  "keywords": [
    "playwright",
    "typescript",
    "e2e-testing",
    "automation",
    "allure",
    "qa",
    "ci"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.3",
    "allure-playwright": "^3.2.1",
    "playwright": "^1.52.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}